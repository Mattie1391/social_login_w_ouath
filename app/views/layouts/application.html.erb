<!DOCTYPE html>
<html>
  <head>
    <title>SocialLoginWOuath</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div id="nav">
      <% if current_user %>
        <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
        <%= link_to "Logout", :logout, method: :post %>
      <% else %>
        <%= link_to "Register", new_user_path %> |
        <%= link_to "Login", :login %>
        <%= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook) %>
        <%= link_to 'Login with Google', auth_at_provider_path(:provider => :google) %>
        <%= link_to 'Login with GitHub', auth_at_provider_path(:provider => :github) %>
      <% end %>
    </div>
    <div>
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
    </div>
    <%= yield %>
  </body>
</html>
